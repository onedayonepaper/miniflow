# MiniFlow Production Environment Configuration
# Copy this file to .env and configure for your production environment

APP_NAME=MiniFlow
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=Asia/Seoul
APP_URL=https://your-domain.com
APP_FRONTEND_URL=https://your-frontend-domain.com

# Logging Configuration
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

# Database Configuration (MySQL recommended for production)
DB_CONNECTION=mysql
DB_HOST=your-db-host
DB_PORT=3306
DB_DATABASE=miniflow
DB_USERNAME=miniflow_user
DB_PASSWORD=your-secure-password

# Redis Configuration (recommended for production caching and queues)
REDIS_CLIENT=phpredis
REDIS_HOST=your-redis-host
REDIS_PASSWORD=null
REDIS_PORT=6379

# Cache Configuration
CACHE_STORE=redis
CACHE_PREFIX=miniflow_cache_

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.your-domain.com

# Queue Configuration
QUEUE_CONNECTION=redis

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.your-provider.com
MAIL_PORT=587
MAIL_USERNAME=your-smtp-username
MAIL_PASSWORD=your-smtp-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME="${APP_NAME}"

# AWS S3 (for file storage in production)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=ap-northeast-2
AWS_BUCKET=miniflow-attachments
AWS_USE_PATH_STYLE_ENDPOINT=false

# Filesystem Configuration
FILESYSTEM_DISK=s3

# Sanctum Configuration
SANCTUM_STATEFUL_DOMAINS=your-frontend-domain.com

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com

# Security Headers
SECURE_HEADERS_ENABLED=true

# Rate Limiting
RATE_LIMIT_API=60
RATE_LIMIT_AUTH=5

# Telescope (disable in production for performance)
TELESCOPE_ENABLED=false

# Monitoring & APM (optional)
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
